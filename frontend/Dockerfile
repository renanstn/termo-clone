# =============================================================================
# Base
# =============================================================================
FROM node:16 AS base
WORKDIR /app
ENV PATH /app/node_modules/.bin:$PATH
COPY package*.json ./

# =============================================================================
# Development
# =============================================================================
FROM base AS development
RUN npm install --include=dev
COPY . .
CMD ["npm", "run", "serve"]

# =============================================================================
# Production
# =============================================================================
FROM base AS production
RUN npm install
COPY . .
CMD ["npm", "run", "serve"]
